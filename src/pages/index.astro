---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Steps from '~/components/widgets/Steps.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: '我的个人主页 - 软件工程学生',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <!-- 
    注意：移除了原模板中的 <Fragment slot="header"> 部分，
    现在页面将自动使用 src/navigation.ts 中配置的全局导航栏。
  -->

  <!-- Hero2 Widget ******************* -->

  <Hero
    id="hero"
    title="你好，我是tonygyf"
    tagline="Java / Kotlin 开发者"
    actions={[{ variant: 'primary', text: 'GitHub 主页', href: 'https://github.com/tonygyf', icon: 'tabler:brand-github' }]}
  >
    <Fragment slot="subtitle">
      我来自<b>上海东华大学</b>。<br /> 
      擅长 <b>Java</b> 和 <b>Kotlin</b> 开发，热衷于探索软件工程的最佳实践与新技术。
    </Fragment>
  </Hero>

  <!-- Content Widget **************** -->

  <Content
    id="about"
    columns={2}
    items={[
      {
        icon: 'tabler:photo-up',
        callToAction: {
          target: '_blank',
          text: 'Telegraph 图床',
          href: 'https://image.gyf123.dpdns.org/',
        },
        description: '免费图床，支持上传图片至 Telegram 频道，无限流量。',
      },
      {
        icon: 'tabler:device-tv',
        callToAction: {
          target: '_blank',
          text: 'LibreTV',
          href: 'https://tv.gyf123.dpdns.org/',
        },
        description: '免费在线视频搜索与观看平台，聚合多源内容。',
      },
      {
        icon: 'tabler:server-cog',
        callToAction: {
          target: '_blank',
          text: '节点管理 (VPN)',
          href: 'https://cmliu.gyf123.dpdns.org/admin',
        },
        description: '个人 VPN 节点管理后台，基于 edgetunnel 驱动。',
      },
      {
        icon: 'tabler:notebook',
        callToAction: {
          target: '_blank',
          text: '个人博客',
          href: 'https://blog.gyf123.dpdns.org/',
        },
        description: '基于 AstroPaper 的技术博客，分享我的学习笔记和项目心得。',
      },
    ]}
    image={{
      src: '~/assets/images/两寸白底.jpg',
      alt: '我的个人照片',
      loading: 'eager',
    }}
  >
    <Fragment slot="content">
      <h2 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">关于我</h2>
      <p>
        我是一名来自<b>上海东华大学</b>软件工程专业的在读大学生。
      </p>
      <br />
      <p>
        除了专注于 <b>Java</b> 和 <b>Kotlin</b> 开发，我也热衷于折腾服务器和搭建各类实用的网络服务。我部署了一系列个人应用来提升效率和生活质量。
      </p>
      <br />
      <p>
        在这里，你可以访问我搭建的<b>免费图床</b>、<b>在线视频平台</b>、<b>节点管理系统</b>以及我的<b>技术博客</b>。欢迎体验！
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    id="resume"
    title="教育背景"
    items={[
      {
        title: `软件工程 (本科) <br /> <span class="font-normal">上海东华大学</span> <br /> <span class="text-sm font-normal">2022 - 至今</span>`,
        icon: 'tabler:school',
        description: '主修课程：Java 程序设计、数据结构与算法、计算机网络、操作系统、软件工程导论等。',
      },
    ]}
    classes={{ container: 'max-w-3xl' }}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="技能专长"
    subtitle="我在学习和实践中掌握的技术栈。"
    columns={3}
    defaultIcon="tabler:point-filled"
    items={[
      {
        title: 'Java 开发',
        description: '熟练掌握 Java 核心语法、面向对象编程思想及常用集合框架。',
      },
      {
        title: 'Kotlin 开发',
        description: '熟悉 Kotlin 语言特性，能够使用 Kotlin 进行高效的应用开发。',
      },
      {
        title: '后端技术',
        description: '了解 Spring Boot 等主流后端框架，具备 RESTful API 开发意识。',
      },
      {
        title: '数据库',
        description: '熟悉 MySQL 等关系型数据库的基本操作与 SQL 编写。',
      },
      {
        title: '开发工具',
        description: '熟练使用 IntelliJ IDEA, Git 等开发工具进行版本控制与协作。',
      },
      {
        title: '软件工程',
        description: '理解软件开发生命周期，具备良好的编码规范和文档编写习惯。',
      },
      {
        title: '算法与数据结构',
        description: '具备扎实的算法基础，能够运用常见数据结构解决问题。',
      },
      {
        title: '英语能力',
        description: '具备良好的英文技术文档阅读能力。',
      },
      {
        title: '持续学习',
        description: '对新技术保持敏感，拥有强大的自驱力和学习能力。',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    id="projects"
    title="项目展示"
    subtitle="我的 GitHub 置顶开源项目"
    columns={3}
    items={[
      {
        title: 'Node Subscription Manager',
        description: '节点自用订阅管理工具，支持多种协议转换与筛选',
        icon: 'tabler:server',
        callToAction: { text: '查看源码', href: 'https://github.com/tonygyf/cmliu', icon: 'tabler:brand-github' },
      },
      {
        title: 'Screenshot to MD Note',
        description: '一个基于cursor开发，截屏后自动生成md笔记的python小应用',
        icon: 'tabler:brand-python',
        callToAction: { text: '查看源码', href: 'https://github.com/tonygyf/cursor-calculator-demo1', icon: 'tabler:brand-github' },
      },
      {
        title: 'ID Photo Generator',
        description: '使用mediapip的证件照生成器',
        icon: 'tabler:id',
        callToAction: { text: '查看源码', href: 'https://github.com/tonygyf/cursor-picture-demo2', icon: 'tabler:brand-github' },
      },
      {
        title: 'Online Teach App',
        description: '仿造学习通的安卓在线教育应用，Material Design 风格',
        icon: 'tabler:school',
        callToAction: { text: '查看源码', href: 'https://github.com/tonygyf/onlineTeach', icon: 'tabler:brand-github' },
      },
      {
        title: 'P2P Call & Chat',
        description: '基于 Electron 和 WebDAV 的现代化点对点安全通话与聊天应用',
        icon: 'tabler:phone',
        callToAction: { text: '查看源码', href: 'https://github.com/tonygyf/p2p-call-webdav', icon: 'tabler:brand-github' },
      },
      {
        title: 'Full Stack Web App',
        description: '这是一个一步一步做出来的前后端分离程序 (Vue + Spring Boot)',
        icon: 'tabler:brand-vue',
        callToAction: { text: '查看源码', href: 'https://github.com/tonygyf/vue-springboot', icon: 'tabler:brand-github' },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Content Widget **************** -->
  <!-- 
    如果你暂时没有更多项目，可以注释掉下面的 Content 组件，
    或者把它们改成其他的练习项目。
  -->

  <!-- Testimonials Widget *********** -->
  <!-- 暂时隐藏客户评价，因为没有工作经历 -->
  <!-- 
  <Testimonials
    title="客户评价"
    ...
  />
  -->

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="期待与您合作"
    subtitle="如果您正在寻找一名潜力无限的 Java/Kotlin 实习生，请随时联系我。"
    actions={[
      {
        variant: 'primary',
        text: '发送邮件',
        href: 'mailto:your-email@example.com',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title="最新博客文章"
    information={`分享我的学习笔记和技术心得。`}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
